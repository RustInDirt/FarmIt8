<Ui xmlns="http://www.blizzard.com/wow/ui/"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

	<!-- Slot Template -->
	<Frame name="FI_Template" parent="UIParent" virtual="true">
		<Size>
			<AbsDimension x="30" y="30"/>
		</Size>
		<Anchors>
		</Anchors>
		<Scripts>
			<OnEnter>
				GameTooltip:SetOwner(FI_Mod, "ANCHOR_TOPLEFT");
				GameTooltip:SetText(
					"Place any item from your inventory\n"..
					"into one of the slots to keep track\n"..
					"of how many you have.\n\n"..
					"Right-click a slot to clear it."
				);
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parent_Icon" file="Interface\PaperDoll\UI-Backpack-EmptySlot">
					<Size>
						<AbsDimension x="30" y="30"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parent_Count" inherits="NumberFontNormal" text="0">
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parent_Item" inherits="GameFontNormal" justifyH="LEFT">
					<Anchors>
						<Anchor point="LEFT" relativeTo="$parent_Icon" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="10" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
	
	<!-- Begin Actual Mod Code -->
	<Script file="FarmIt8.lua"/>
	<Frame name="FI" frameStrata="LOW" parent="UIParent" movable="true" hidden="false">
		<Size>
			<AbsDimension x="70" y="175"/>
		</Size>
		<Anchors>
			<Anchor point="LEFT" relativeTo="UIParent">
				<Offset>
					<AbsDimension x="0" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Scripts>
			<OnLoad>
				FI_OnLoad();
			</OnLoad>
			<OnShow>
				FI_OnShow();
			</OnShow>
			<OnEvent>
				FI_OnEvent();
			</OnEvent>
		</Scripts>
		<Layers>
		</Layers>
		<Frames>
			<!-- Main Frame -->
			<Frame name="FI_Mod" toplevel="true" hidden="false">
				<Size>
					<AbsDimension x="50" y="300"/>
				</Size>
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				
				<Backdrop name="FI_Background" bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<EdgeSize>
						<AbsValue val="20"/>
					</EdgeSize>
					<TileSize>
						<AbsValue val="10"/>
					</TileSize>
					<BackgroundInsets>
						<AbsInset left="5" right="5" top="5" bottom="5"/>
					</BackgroundInsets>
				</Backdrop>
				
				<Layers>
				</Layers>
				
				<Frames>
					<!-- Mouse Click Anchor -->
					<Frame name="FI_HitZone" toplevel="true" hidden="false">
						<Size>
							<AbsDimension x="35" y="10"/>
						</Size>
						<Anchors>
							<Anchor point="BOTTOM">
								<Offset>
									<AbsDimension x="0" y="-9"/>
								</Offset>
							</Anchor>
						</Anchors>
						<Backdrop name="FI_HitZone_BG" bgFile="Interface\DialogFrame\UI-DialogBox-Background" tile="true">
							<TileSize>
								<AbsValue val="10"/>
							</TileSize>
						</Backdrop>
						<Scripts>
							<OnMouseDown>
								if (arg1=="LeftButton") then
									FI:StartMoving();
								end
							</OnMouseDown>
							<OnMouseUp>
								FI:StopMovingOrSizing();
								
								if (IsControlKeyDown() and arg1=="LeftButton") then
									FI_Reset();
								end
							</OnMouseUp>
							
							<OnEnter>
								GameTooltip:SetOwner(FI_HitZone, "ANCHOR_CURSOR");
								GameTooltip:SetText(
									"Click here to drag.\n"..
									"Ctrl-click to reset."
								);
							</OnEnter>
							<OnLeave>
								GameTooltip:Hide();
							</OnLeave>
						</Scripts>
					</Frame>
					
					<!-- SLOT 1 -->
					<Frame name="FI_Slot1" inherits="FI_Template" toplevel="true" hidden="false">
						<Size>
							<AbsDimension x="30" y="30"/>
						</Size>
						<Anchors>
							<Anchor point="BOTTOM" relativeTo="FI_Mod">
								<Offset>
									<AbsDimension x="0" y="10"/>
								</Offset>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnMouseUp>
								FI_Click("FI_Slot1", arg1);
							</OnMouseUp>
						</Scripts>
					</Frame>
					
					<!-- SLOT 2 -->
					<Frame name="FI_Slot2" inherits="FI_Template" toplevel="true" hidden="false">
						<Size>
							<AbsDimension x="30" y="30"/>
						</Size>
						<Anchors>
							<Anchor point="BOTTOM" relativeTo="FI_Mod">
								<Offset>
									<AbsDimension x="0" y="45"/>
								</Offset>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnMouseUp>
								FI_Click("FI_Slot2", arg1);
							</OnMouseUp>
						</Scripts>
					</Frame>
					
					<!-- SLOT 3 -->
					<Frame name="FI_Slot3" inherits="FI_Template" toplevel="true" hidden="false">
						<Size>
							<AbsDimension x="30" y="30"/>
						</Size>
						<Anchors>
							<Anchor point="BOTTOM" relativeTo="FI_Mod">
								<Offset>
									<AbsDimension x="0" y="80"/>
								</Offset>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnMouseUp>
								FI_Click("FI_Slot3", arg1);
							</OnMouseUp>
						</Scripts>
					</Frame>
					
					<!-- SLOT 4 -->
					<Frame name="FI_Slot4" inherits="FI_Template" toplevel="true" hidden="false">
						<Size>
							<AbsDimension x="30" y="30"/>
						</Size>
						<Anchors>
							<Anchor point="BOTTOM" relativeTo="FI_Mod">
								<Offset>
									<AbsDimension x="0" y="115"/>
								</Offset>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnMouseUp>
								FI_Click("FI_Slot4", arg1);
							</OnMouseUp>
						</Scripts>
					</Frame>
        <Frame name="FI_Slot5" inherits="FI_Template" toplevel="true" hidden="false">
