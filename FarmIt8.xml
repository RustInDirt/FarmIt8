            <Anchors>
                <Anchor point="BOTTOM" relativeTo="FI_Mod">
                    <Offset><AbsDimension x="0" y="255"/></Offset>
                </Anchor>
            </Anchors>
            <Scripts><OnMouseUp>FI_Click("FI_Slot8", arg1);</OnMouseUp></Scripts>
        </Frame>
					
